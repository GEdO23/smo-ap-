@model ProdutoModel

@{
ViewBag.Title = "Cadastro - Produto";
Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <h1>Cadastro de Produto</h1>
    </div>

    <div class="row">
        <form asp-action="Create" asp-controller="Produto">

            <div class="form-group">
                <label asp-for="Id">Id</label>
                <input class="form-control" type="text" asp-for="Id">
            </div>

            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input class="form-control" type="text" asp-for="Nome">
            </div>

            <div class="form-group">
                <label asp-for="Preco">Preço</label>
                <input class="form-control" type="number" asp-for="Preco">
            </div>

            <div class="form-group">
                <label asp-for="Estoque">Estoque</label>
                <input class="form-control" type="number" asp-for="Estoque">
            </div>

            <div class="form-group">
                <label asp-for="Descricao">Descrição</label>
                <input class="form-control" type="text" asp-for="Descricao">
            </div>

            <button class="btn btn-primary mt-4" type="submit">Submit</button>

        </form>
    </div>

</div>