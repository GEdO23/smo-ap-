@model ProdutoModel

@{
ViewBag.Title = "Atualizar - Produto";
Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <h1>Atualizar @Model.Nome</h1>
    </div>

    <div class="row">
        <form asp-action="Update" asp-controller="Produto" asp-route-id="@Model.Id" method="post">

            <div class="form-group">
                <label asp-for="Id">Id</label>
                <input class="form-control" type="text" asp-for="Id" disabled="disabled">
            </div>

            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input class="form-control" type="text" asp-for="Nome">
            </div>

            <div class="form-group">
                <label asp-for="Preco">Preço</label>
                <input class="form-control" type="number" asp-for="Preco">
            </div>

            <div class="form-group">
                <label asp-for="Estoque">Estoque</label>
                <input class="form-control" type="number" asp-for="Estoque">
            </div>

            <div class="form-group">
                <label asp-for="Descricao">Descrição</label>
                <input class="form-control" type="text" asp-for="Descricao">
            </div>

            <div class="mt-4">
                <a class="btn btn-outline-secondary"
                   asp-area="" asp-controller="Produto" asp-action="Index"
                   role="button">
                    Voltar
                </a>
                <input class="btn text-light btn-danger"
                       type="submit"
                       value="Atualizar"
                       role="button" />
            </div>


        </form>
    </div>
</div>